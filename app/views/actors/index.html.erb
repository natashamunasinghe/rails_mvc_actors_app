<p id="notice"><%= notice %></p>

<div class='container'>
<h1>Awesome Actors Who Are Awesome But Overpaid</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Image</th>
      <th>Option 1</th>
      <th>Option 2</th>
      <th>Option 3</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.age %></td>
        <td><%= actor.gender %></td>
        <td><%= actor.image %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
<button type="button" class="btn btn-primary justify-content">New Actor
<%= link_to 'New Actor', new_actor_path %>
</button>
</div>
</div>
