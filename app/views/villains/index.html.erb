<div class='container'>
<h1>Dastardly Villains</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Movie</th>
      <th>Option 1</th>
      <th>Option 2</th>
      <th>Option 3</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @villains.each do |villain| %>
      <tr>
        <td><%= villain.name %></td>
        <td><%= villain.movie %></td>
        <td><%= link_to 'Show', villain %></td>
        <td><%= link_to 'Edit', edit_villain_path(villain) %></td>
        <td><%= link_to 'Destroy', villain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
<button type="button" class="btn btn-primary justify-content">New Villain
<%= link_to 'New Villain', new_villain_path %>
</button>
</div>
</div>